{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Stiftung der DPolG Buchungssystem",
  "version": "1.6.6",
  "identifier": "com.maximilianfegg.dpolg-booking-modern",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Stiftung der DPolG Buchungssystem",
        "width": 1600,
        "height": 900,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Maxwellbadger-1/dpolg-booking-modern/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlERTZCMzUzOThFNDBENTEKUldSUkRlU1lVN1BtblN6QTI1TmF5d1ZUK2VqYVEwbnBBS085ZXFMYkwxYU02WWdCSURNcEpQM24K"
    }
  }
}
